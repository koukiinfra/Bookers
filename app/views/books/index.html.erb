<h1>Books</h1>
<table class="table">
  <div class="table-top">
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </div>
<% @books.each do |book| %>
  <div class="table-body">
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to 'show', book_path(book.id) %></th>
      <th><%= link_to "Edit", edit_book_path(book.id) %></th>
      <th><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure" %></th>
    </tr>
  </div>
<% end %>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <% if @book.errors.count == 2 %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
  <% else %>
    <%= @book.errors.count %> error prohibited this book from being saved:
  <% end %>
  <ul >
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="new-top">
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="new-body">
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="new-body"><%= f.submit 'Create Book' %></div>
<% end %>
</div>




